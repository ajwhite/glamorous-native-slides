function Button ({textStyle, children, ...props}) {
  return (
    <Touchable {...props} >
      <Text style={textStyle}>
        {children}
      </Text>
    </Touchable>
  )
}

const touchableProps = mapProps(
  ({color, ...props}) => ({
    ...props,
    touchableUnderlay: Color(color).darken(0.2).hex()
  })
)

const Touchable = touchableProps(
  glamorous.touchableHighlight(
    {
      alignItems: 'center',
      justifyContent: 'center'
    },
    ({large}) => ({
      padding: large ? 40 : 20
    })
  )
)

const Text = glamorous.text(
  ({color, large}) => ({
    fontSize: large ? 16 : 14,
    color: Color(color).isLight() ? '#FFF' : '#000'
  })
)
